@model Product

<div class="card mb-4 shadow-sm">
    <img src="@(string.IsNullOrEmpty(Model.ImageName) ? "/images/noimage.png" : "/images/"+Model.ImageName)" class="img-thumbnail h-75" />
    <div class="card-body">
        <h4 class="card-title">Rs. @Model.price</h4>
        <h5 class="text-muted font-weight-light font-italic"> @(string.IsNullOrEmpty(Model.title) ? "Name is not available" : Model.title)</h5>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a asp-route="bookDetailsRoute" asp-route-id="@Model.productId"
                   class="btn btn-sm btn-outline-secondary">View details</a>
            </div>
            <small class="text-muted">@(string.IsNullOrEmpty(Model.condition) ? "NA" : Model.condition)</small>
        </div>
    </div>
</div>