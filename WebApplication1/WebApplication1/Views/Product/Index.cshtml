@{
    ViewData["Title"] = "Add Product";
}


@model WebApplication1.Models.Product

<form method="post" asp-action="Index" enctype="multipart/form-data">
    <div class="container p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row justify-content-center ">
            <h1 class="text-lg-center text-dark pl-3">Add Product</h1>
        </div>
        <div class="row justify-content-center" >
            <div class="col-md-9 border border-dark rounded" style="padding:10px;background-color:mintcream;">
                <div class="form-group row">
                    <div class="col-3 align-self-center">
                        <label asp-for="condition" class="font-weight-bold"> Condition</label>
                    </div>
                    <div class="col">
                        <div class="form-check form-check-inline">
                            <input name="condition" type="radio" value="New" /> New
                        </div>
                        <div class="form-check form-check-inline">
                            <input name="condition" type="radio" value="Used" /> Used
                        </div>
                        <span asp-validation-for="condition" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3 align-self-center">
                        <label asp-for="Type" class="font-weight-bold"> Type</label>
                    </div>
                    <div class="col w-75">
                        <input asp-for="Type" class="form-control" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3 align-self-center">
                        <label asp-for="title" class="font-weight-bold"> Title</label>
                    </div>
                    <div class="col w-75">
                        <input asp-for="title" class="form-control" />
                        <span asp-validation-for="title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3 align-self-center">
                        <label asp-for="Description" class="font-weight-bold"> Description</label>
                    </div>
                    <div class="col w-75">
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3 align-self-center">
                        <label asp-for="price" class="font-weight-bold"> Price</label>
                    </div>
                    <div class="col w-75">
                        <input asp-for="price" class="form-control" />
                        <span asp-validation-for="price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3 align-self-center">
                        <label asp-for="ImageFile" class="font-weight-bold"> Image</label>
                    </div>
                    <div class="col w-75">
                        <div class="custom-file">
                            <input asp-for="ImageFile" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <div class="form-group row">
                    <div class="col-4">
                        <label class="font-weight-bolder">For Confirmation:</label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3 align-self-center">
                        <label asp-for="PhoneNumber" class="font-weight-bold">Phone Number</label>
                    </div>
                    <div class="col w-75">
                        <input asp-for="PhoneNumber" type="text" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="col-2">
                        <p> @ViewBag.SuccessMessage</p>
                    </div>
                </div>
                <div class="form-group row justify-content-end">
                    <div class="col-2">
                        <input type="submit" class="btn btn-dark btn-block" name="Submit" value="Add" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>