@{
    ViewData["Title"] = "Login";
}

@model WebApplication1.Models.User

<form method="post" asp-action="Login" style="margin-top:10%">
    <div class="container p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row justify-content-center ">
            <h1 class="text-lg-center text-dark pl-3">Log In </h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6" style="padding:10px;">
                <div class="form-group row">
                    <div class="col-3 align-self-center">
                        <label asp-for="Email" class="font-weight-bold"> Email</label>
                    </div>
                    <div class="col w-75">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3 align-self-center">
                        <label asp-for="Password" class="font-weight-bold"> Password</label>
                    </div>
                    <div class="col w-75">
                        <input type="password" asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="col-4">
                        <p class="">@ViewBag.Message </p>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <div class="offset-md-2 col-5">
                        <input type="submit" class="btn btn-dark btn-block border " name="Submit" value="Sign in" style="border-radius:25px" />
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="offset-md-2 col-5">
                        <input asp-controller="Registration" asp-action="Registration" type="submit" class="btn btn-dark btn-block" name="Submit" value="Sign Up" style="border-radius:25px" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>